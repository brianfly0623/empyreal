{% extends "./partials/base.html" %}

{% set title = "Text Inputs" %}

{% block content %}
    <div class="section scrollspy" id="introduction" data-name="Introduction">
        <h2 class="blue-text">Normal</h2>
        <div data-syntax="html">
            <div class="row">
                <div class="col s12 m6">
                    <div class="text-field">
                        <input type="text" id="input1">
                        <label for="input1">First Name</label>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="text-field with-icon-left">
                        <input type="text" id="input2">
                        <i class="material-icons">people</i>
                        <label for="input2">Last Name</label>
                    </div>
                </div>
                <div class="col s12 m12">
                    <div class="text-field disabled">
                        <input type="text" id="input3" placeholder="I am not editable">
                        <label for="input3" class="active">Disabled</label>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <h2 class="blue-text">Filled</h2>
        <div data-syntax="html">
            <div class="row">
                <div class="col s12 m6">
                    <div class="text-field filled">
                        <input type="text" id="input4">
                        <label for="input4">First Name</label>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="text-field filled with-icon-left">
                        <input type="text" id="input5">
                        <i class="material-icons">people</i>
                        <label for="input5">Last Name</label>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <h2 class="blue-text">Outline</h2>
        <div data-syntax="html">
            <div class="row">
                <div class="col s12 m6">
                    <div class="text-field outline">
                        <input type="text" id="input6">
                        <label for="input6">First Name</label>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="text-field outline with-icon-left">
                        <input type="text" id="input7">
                        <i class="material-icons">people</i>
                        <label for="input7">Last Name</label>
                    </div>
                </div>
                <div class="col s12">
                    <br>
                    <div class="text-field outline rounded">
                        <input type="text" id="input8">
                        <label for="input8">Rounded</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br>
    <div class="divider"></div>
    <br>

    <div class="section scrollspy" id="helper-text" data-name="Helper Text">
        <h1 class="blue-text">Helper Text</h1>
        <div data-syntax="html">
            <div class="text-field">
                <input type="text" id="input9">
                <label for="input9">Input</label>
                <div class="bottom-text">
                    <span class="helper-text">Helper Text</span>
                </div>
            </div>
        </div>
    </div>

    <br>
    <div class="divider"></div>
    <br>

    <div class="section scrollspy" id="textarea" data-name="Textarea">
        <h1 class="blue-text">Textarea</h1>
        <div data-syntax="html">
            <div class="row">
                <div class="col s12 m4">
                    <div class="text-field" style="height: 200px">
                        <textarea id="textarea1"></textarea>
                        <label for="teaxtarea1">Normal</label>
                    </div>
                </div>
                
                <div class="col s12 m4">
                    <div class="text-field filled" style="height: 200px">
                        <textarea id="textarea2"></textarea>
                        <label for="teaxtarea2">Filled</label>
                    </div>
                </div>

                <div class="col s12 m4">
                    <div class="text-field outline" style="height: 200px">
                        <textarea id="textarea3"></textarea>
                        <label for="teaxtarea3">Outline</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br>
    <div class="divider"></div>
    <br>

    
{% endblock content %}